@model Asp.NetStudentManagementSystem.Models.ChangePassword
@{
    ViewData["Title"] = "Şifrəni dəyiş";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

 <table class="subjects-table table table-striped table-bordered">
     </table>
<div class="row justify-content-center col-12 p-2">
    <div class="col-6 p-2" style="background-color:white;border-radius:15px;box-shadow: rgba(60, 64, 67, 0.3) 0px 1px 2px 0px, rgba(60, 64, 67, 0.15) 0px 2px 6px 2px;">
        @if (ViewBag.IsSuccess == true)
        {
            <div class="alert alert-success" role="alert">
                <span class="text-dark">Password successfully changed!</span>
            </div>
        }
        <form method="post" asp-controller="Home" asp-action="ChangePassword">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group p-3">
                <input asp-for="CurrentPassword" class="form-control" placeholder="Hazırki şifrə" />
                <span asp-validation-for="CurrentPassword" class="text-danger"></span>
            </div>
            <div class="form-group p-3">
                <input asp-for="NewPassword" class="form-control" placeholder="Yeni şifrə"/>
                <span asp-validation-for="NewPassword" class="text-danger"></span>
            </div>
            <div class="form-group p-3">
                <input asp-for="ConfirmNewPassword" class="form-control" placeholder="Yeni şifrə təsdiq"/>
                <span asp-validation-for="ConfirmNewPassword" class="text-danger"></span>
            </div>
            <div class="form-group p-3">
                <button type="submit" class="btn btn-primary mt-2" style="background-color:#144365" />Təsdiq</button>
            </div>
        </form>
    </div>
</div>

