@using Asp.NetStudentManagementSystem.Models

@{
    ViewData["Title"] = "Dərslər";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@model IEnumerable<Subject>
 <table class="subjects-table table table-striped table-bordered">
     </table>

     <a style="text-decoration:none;border:1px solid black; padding:7px;background-color:#f2f2f2;color:black" asp-controller="Subject" asp-action="Create">Yeni dərs yarat</a>
    <table style="table-layout:auto" class="table table-responsive table-striped table-bordered">
         <thead>
             <tr>
                <th>Id</th>
                <th>Ad</th>
                <th>Saat</th>
                <th>Düzəliş et</th>
        </tr>
         </thead>
         <tbody>
             @foreach (var item in Model)
             {
                 <tr>
                     <td>@item.Id</td>
                     <td>@item.Name</td>
                     <td>@item.Hours</td>
                     <td> <a style="text-decoration:none;border:1px solid black; padding:3px;background-color:#f2f2f2;color:black" asp-controller="Subject" asp-action="Update" asp-route-id="@item.Id">Düzəliş et</a></td>
                 </tr>
             }
          </tbody>
    </table>

