@using Asp.NetStudentManagementSystem.Models

@{
    ViewData["Title"] = "Imtahanlar";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@model IEnumerable<Exam>
<table class="subjects-table table table-striped table-bordered">
</table>

<a style="text-decoration:none;border:1px solid black; padding:3px;background-color:#f2f2f2;color:black" asp-controller="Exam" asp-action="Create">Yeni imtahan yarat</a>
<table style="table-layout:auto" class="table table-responsive table-striped table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>Imtahan tarixi</th>
            <th>Imtahan verəcək qrup</th>
            <th>Imtahan ediləcək mövzu</th>
            <th>Düzəliş et</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Date</td>
                <td>@item.Group.Name</td>
                <td>@item.Subject.Name</td>
                <td> <a style="text-decoration:none;border:1px solid black; padding:3px;background-color:#f2f2f2;color:black" asp-controller="Exam" asp-action="Update" asp-route-id="@item.Id">Düzəliş et</a></td>
            </tr>
        }
    </tbody>
</table>


