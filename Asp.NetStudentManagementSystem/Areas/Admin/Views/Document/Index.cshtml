@using Asp.NetStudentManagementSystem.Models
@{
    ViewData["Title"] = "Ərizələr";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@model IEnumerable<UserDocument>
 <table class="subjects-table table table-striped table-bordered">
     </table>

    <table style="table-layout:auto" class="table table-responsive table-striped table-bordered">
         <thead>
             <tr>
                <th>Id</th>
                <th>Müraciətçi</th>
                <th>Ərizə növü</th>
                <th>Hazırlanma müddəti</th>
                <th>Təqdim ediləcək müəssisə</th>
        </tr>
         </thead>
         <tbody>
             @foreach (var item in Model)
             {
                 <tr>
                     <td>@item.Id</td>
                     <td>@item.AppUser.Name (@item.AppUser.Email)</td>
                     <td>@item.Document.Name</td>
                     <td>@item.Document.Duration gün</td>
                     <td>@item.ToWhere</td>
                 </tr>
             }
          </tbody>
    </table>
