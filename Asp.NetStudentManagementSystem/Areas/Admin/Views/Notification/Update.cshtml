@using Asp.NetStudentManagementSystem.Models

@{
    ViewData["Title"] = "Düzəliş et";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@model Notification
<table class="subjects-table table table-striped table-bordered">
</table>
<div class="container d-flex justify-content-center">
    <form class="col-6" method="post" asp-controller="Notification" asp-action="Update">
        <label asp-for="Title">Bildirişin başlığı</label>
        <input class="form-control" asp-for="Title" /> <br />
        <span class="text-danger" asp-validation-for="Title"></span>


        <label asp-for="Content">Məzmun</label>
        <input class="form-control" asp-for="Content" /> <br />
        <span class="text-danger" asp-validation-for="Content"></span>

        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <button type="submit" class="btn btn-primary" style="background-color:#144365;border:none">Təsdiqlə</button>
    </form>
</div>

