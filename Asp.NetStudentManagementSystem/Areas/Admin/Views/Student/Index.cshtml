@using Asp.NetStudentManagementSystem.Models

@{
    ViewData["Title"] = "Tələbələr";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@model IEnumerable<UsersInfo>
<table class="subjects-table table table-striped table-bordered">
</table>

<a class="admin-buttons" asp-controller="Student" asp-action="Create">Yeni tələbə yarat</a>
<table style="table-layout:auto" class="table table-responsive table-striped table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>Ad Soyad</th>
            <th>Ata adı</th>
            <th>Doğum tarixi</th>
            <th>Vətəndaşı olduğu ölkə</th>
            <th>Cins</th>
            <th>Email</th>
            <th>Qrup</th>
            <th>Status</th>
            <th>Düzəliş et</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name @item.Surname</td>
                <td>@item.FatherName</td>
                <td>@item.DateOfBirth.ToShortDateString()</td>
                <td>@item.Country</td>
                <td>@item.Gender</td>
                <td>@item.Email</td>
                @if (@item.Group is null)
                {
                    <td><span>Təyin edilməyib</span></td>
                }
                else
                {
                    <td>@item.Group.Name</td>
                }
                @if (@item.isActive == true)
                {
                    <td class="text-success" style="font-weight:bold"><span>Aktiv</span></td>
                }
                else
                {
                    <td><span class="text-danger" style="font-weight:bold">Qeyri/Aktiv</span></td>
                }
                 <td> <a class="admin-buttons" asp-controller="Student" asp-action="Update" asp-route-id="@item.Id">Düzəliş et</a></td>
            </tr>
        }
    </tbody>
</table>

