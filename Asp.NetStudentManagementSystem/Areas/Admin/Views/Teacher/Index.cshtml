@using Asp.NetStudentManagementSystem.Models

@{
    ViewData["Title"] = "Müəllimlər";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@model IEnumerable<Teacher>
<table class="subjects-table table table-striped table-bordered">
</table>

<a style="text-decoration:none;border:1px solid black; padding:7px;background-color:#f2f2f2;color:black" asp-controller="Teacher" asp-action="Create">Yeni müəllim yarat</a>
<table style="table-layout:auto" class="table table-responsive table-striped table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>Ad Soyad</th>
            <th>Doğum tarixi</th>
            <th>Email</th>
            <th>Dərs</th>
            <th>Status</th>
            <th>Düzəliş et</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name @item.Surname</td>
                <td>@item.DateOfBirth.ToShortDateString()</td>
                <td>@item.Email</td>
                @if (@item.Subject is null)
                {
                    <td><span>Təyin edilməyib</span></td>
                }
                else
                {
                    <td>@item.Subject.Name</td>
                }
                @if (@item.isActive == true)
                {
                    <td class="text-success" style="font-weight:bold"><span>Aktiv</span></td>
                }
                else
                {
                    <td><span class="text-danger" style="font-weight:bold">Qeyri/Aktiv</span></td>
                }
                <td> <a style="text-decoration:none;border:1px solid black; padding:3px;background-color:#f2f2f2;color:black" asp-controller="Teacher" asp-action="Update" asp-route-id="@item.Id">Düzəliş et</a></td>
            </tr>
        }
    </tbody>
</table>