@using Asp.NetStudentManagementSystem.Models
@using Asp.NetStudentManagementSystem.ViewModels

@{
    ViewData["Title"] = "Müəllim yarat";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@model UserRegistrationVM
<table class="subjects-table table table-striped table-bordered">
</table>
<div class="container d-flex justify-content-center p-3">
    <form class="col-6" method="post" asp-controller="Teacher" asp-action="Create">
        <label asp-for="Name">Ad</label>
        <input class="form-control" asp-for="Name" />
        <span class="text-danger" asp-validation-for="Name"></span>

        <label asp-for="Surname">Soyad</label>
        <input class="form-control" asp-for="Surname" />
        <span class="text-danger" asp-validation-for="Surname"></span>

        <label asp-for="DateOfBirth">Doğum tarixi</label>
        <input class="form-control" asp-for="DateOfBirth" type="date" max="2011-01-01" />
        <span class="text-danger" asp-validation-for="DateOfBirth"></span>

        <div class="form-input-control">
            <select asp-for="SubjectId" class="gender-selection w-100 form-control">
                 <option value="">-- Dərsi seçin --</option>
                @foreach (var item in (ViewBag.Subjects as List<Subject>))
                {
                <option value="@item.Id">@item.Name</option>
                }
            </select>
        </div>
        <label asp-for="Email">E-mail</label>
        <input class="form-control" asp-for="Email" />
        <span class="text-danger" asp-validation-for="Email"></span>

        <label asp-for="Password">Şifrə</label>
        <input class="form-control" asp-for="Password" />
        <span class="text-danger" asp-validation-for="Password"></span>

        <label asp-for="ConfirmPassword">Şifrə Təsdiq</label>
        <input class="form-control" asp-for="ConfirmPassword" />
        <span class="text-danger" asp-validation-for="ConfirmPassword"></span>

        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <button type="submit" class="btn btn-primary" style="background-color:#144365;border:none">Yarat</button>
    </form>
</div>

@section scripts{
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js" integrity="sha512-rstIgDs0xPgmG6RX1Aba4KV5cWJbAMcvRCVmglpam9SoHZiUCyQVDdH2LPlxoHtrv17XWblE/V/PP+Tr04hbtA==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/4.0.0/jquery.validate.unobtrusive.min.js" integrity="sha512-xq+Vm8jC94ynOikewaQXMEkJIOBp7iArs3IhFWSWdRT3Pq8wFz46p+ZDFAR7kHnSFf+zUv52B3prRYnbDRdgog==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
}

